{
  "name": "code-generator",
  "displayName": "CodeGenerator",
  "description": "Генерирует код и документацию на основе YAML-шаблонов",
  "version": "0.1.2",
  "publisher": "cherserg",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codegenerator.generateDocs",
        "title": "Generate Docs"
      },
      {
        "command": "codegenerator.generateFromPreset",
        "title": "Generate Docs From Preset"
      },
      {
        "command": "codegenerator.restoreFromBackup",
        "title": "Restore Docs from Backup"
      },
      {
        "command": "codegenerator.syncIndex",
        "title": "Synchronize index.ts"
      }
    ]
  },
  "activationEvents": [
    "onCommand:codegenerator.generateDocs",
    "onCommand:codegenerator.generateFromPreset",
    "onCommand:codegenerator.restoreFromBackup",
    "onCommand:codegenerator.syncIndex",
    "onWillSaveTextDocument"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cherserg/CodeGenerator.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "package": "vsce package",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "preversion": "git add -A",
    "release:patch": "git add -A && git commit -m \"chore(release): подготовка релиза\" && npm version patch -m \"chore(release): v%s\" && npm run compile && git push origin HEAD --follow-tags",
    "release:minor": "git add -A && git commit -m \"chore(release): подготовка релиза\" && npm version minor -m \"chore(release): v%s\" && npm run compile && git push origin HEAD --follow-tags",
    "release:major": "git add -A && git commit -m \"chore(release): подготовка релиза\" && npm version major -m \"chore(release): v%s\" && npm run compile && git push origin HEAD --follow-tags"
  },
  "files": [
    "out",
    "node_modules"
  ],
  "devDependencies": {
    "@types/node": "^14.17.6",
    "typescript": "^4.5.2",
    "vsce": "^2.5.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "prettier": "^3.5.3",
    "yaml": "^2.8.0"
  }
}
